{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["next/babel"]
    }
  },
  "extends": ["next", "next/core-web-vitals"],
  "rules": {
    "@next/next/no-img-element": "warn",
    "react/no-unescaped-entities": "error",
    "@next/next/no-sync-scripts": "error"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "./tsconfig.json"
      }
    }
  }
}
